<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Họ và tên"
            tools:contentText="Nguyễn Văn A" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Ngày sinh"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Giới tính"
                android:textColor="@color/color_grey" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:buttonTint="@color/color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nam" />

                <RadioButton
                    android:buttonTint="@color/color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nữ" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Số CCCD/CMND/Hộ chiếu"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/date_of_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Ngày cấp"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/date_duo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Giá trị đến"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/issued_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Nơi cấp"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Nguyên Quán"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <com.pvcombank.sdk.view.customs.TextViewPVCB.TextViewPVCB
            android:id="@+id/live_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:titleText="Nơi thường trú"
            tools:contentText="9/12/2022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/color_grey_light_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_alert"
            android:drawableLeft="@drawable/ic_danger"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/card_capture_alert_1"
            android:textColor="@color/color_inline_message_warning" />

        <Button
            style="@style/PVButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/confirm" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>