<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.pvcombank.sdk.ekyc.view.customs.TextCheck
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="1"
                app:stateView="checked" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_grey" />

            <com.pvcombank.sdk.ekyc.view.customs.TextCheck
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="2"
                app:stateView="check" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_grey" />

            <com.pvcombank.sdk.ekyc.view.customs.TextCheck
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="3"
                app:stateView="uncheck" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_grey" />

            <com.pvcombank.sdk.ekyc.view.customs.TextCheck
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="4"
                app:stateView="uncheck" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_disable"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Họ và tên"
                    tools:contentText="Nguyễn Văn A" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Ngày sinh"
                    tools:contentText="9/12/2022" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_grey_light_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Giới tính"
                        android:textColor="@color/color_grey" />

                    <RadioGroup
                        android:id="@+id/select_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/man"
                            style="@style/PVRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nam" />

                        <RadioButton
                            android:id="@+id/women"
                            style="@style/PVRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nữ" />
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/identity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Số CCCD/CMND/Hộ chiếu"
                    tools:contentText="9/12/2022" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/date_of_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Ngày cấp"
                    tools:contentText="9/12/2022" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/date_duo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Giá trị đến"
                    tools:contentText="9/12/2022" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/issued_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Nơi cấp"
                    tools:contentText="9/12/2022" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/primary_issue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Nguyên quán"
                    tools:contentText="22 Ngô Quyền, Hàng Bài, Hà Nội" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/color_grey_light_1" />

                <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
                    android:id="@+id/live_in_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:titleText="Địa chỉ thường trú"
                    tools:contentText="22 Ngô Quyền, Hàng Bài, Hà Nội" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.pvcombank.sdk.ekyc.view.customs.EditViewPVCB.EditViewPVCB
            android:id="@+id/edit_address_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textTitle="Địa chỉ liên hệ" />

        <com.pvcombank.sdk.ekyc.view.customs.EditViewPVCB.EditViewPVCB
            android:id="@+id/edit_address_always"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textTitle="Địa chỉ thường trú" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/PVButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:text="@string/confirm" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

