<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pvcombank.sdk.ekyc.view.customs.TextCheck
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="1"
            app:stateView="checked" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_grey" />

        <com.pvcombank.sdk.ekyc.view.customs.TextCheck
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="2"
            app:stateView="checked" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_grey" />

        <com.pvcombank.sdk.ekyc.view.customs.TextCheck
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="3"
            app:stateView="checked" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_grey" />

        <com.pvcombank.sdk.ekyc.view.customs.TextCheck
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="4"
            app:stateView="check" />
    </LinearLayout>

    <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:contentText="Nguyễn Văn A"
        app:titleText="Họ và tên" />

    <com.pvcombank.sdk.ekyc.view.customs.TextViewPVCB.TextViewPVCB
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:contentText="0987654321"
        app:titleText="Tên đăng nhập" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_grey_light" />

    <com.pvcombank.sdk.ekyc.view.customs.EditViewPVCB.EditViewPVCB
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:errorEnabled="true"
        app:isPassword="true"
        app:isShowPassword="true"
        app:textHint="Nhập mật khẩu"
        app:textTitle="Mật khẩu" />

    <com.pvcombank.sdk.ekyc.view.customs.EditViewPVCB.EditViewPVCB
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:isPassword="true"
        app:isShowPassword="true"
        app:textHint="Nhập lại mật khẩu"
        app:textTitle="Xác nhận mật khẩu" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_check_circle_24"
        android:drawableTint="@color/color_green"
        android:text="Mật khẩu tối thiểu 6 ký tự." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_baseline_check_circle_24"
        android:drawableTint="@color/color_green"
        android:text="Bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt." />

    <Button
        android:id="@+id/btn_register"
        style="@style/PVButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:text="Đăng ký" />
</LinearLayout>